# =============================================================================
# EV Life Manager - Backend Environment Variables
# =============================================================================
# 이 파일을 복사하여 .env 파일로 만들고, 실제 값으로 변경하세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=EV Life Manager API
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL Connection
DATABASE_URL=postgresql://username:password@localhost:5432/ev_life_manager
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=False

# Example for Production:
# DATABASE_URL=postgresql://ev_user:your_secure_password@db.example.com:5432/ev_life_manager_prod

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Secret Key (generate: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# -----------------------------------------------------------------------------
# API Keys (External Services)
# -----------------------------------------------------------------------------
# Google Maps API (for charging station location)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Weather API (for charging optimization)
WEATHER_API_KEY=your_weather_api_key_here

# AWS Services
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=ev-life-manager-storage

# -----------------------------------------------------------------------------
# AI/ML Configuration
# -----------------------------------------------------------------------------
# LifeOS Engine 2.0
LIFEOS_ENGINE_URL=http://localhost:8001
LIFEOS_API_KEY=your_lifeos_api_key_here

# Model Configuration
AI_MODEL_PATH=/models/battery_health_predictor.h5
AI_MODEL_VERSION=1.0.0
AI_CONFIDENCE_THRESHOLD=0.85

# -----------------------------------------------------------------------------
# Charging Network APIs
# -----------------------------------------------------------------------------
# Tesla Supercharger API
TESLA_API_KEY=your_tesla_api_key_here

# ChargePoint API
CHARGEPOINT_API_KEY=your_chargepoint_api_key_here
CHARGEPOINT_API_SECRET=your_chargepoint_api_secret_here

# EVgo API
EVGO_API_KEY=your_evgo_api_key_here

# -----------------------------------------------------------------------------
# Email & Notifications
# -----------------------------------------------------------------------------
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@evlifemanager.com

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Redis (Caching & Queue)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_AI_PREDICTION=True
FEATURE_CHARGING_OPTIMIZER=True
FEATURE_MAINTENANCE_BOOKING=True
FEATURE_COMMUNITY=False

# -----------------------------------------------------------------------------
# Testing
# -----------------------------------------------------------------------------
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ev_life_manager_test
TEST_MODE=False