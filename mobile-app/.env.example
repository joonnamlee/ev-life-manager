# =============================================================================
# EV Life Manager - Mobile App Environment Variables
# =============================================================================
# 이 파일을 복사하여 .env 파일로 만들고, 실제 값으로 변경하세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_URL=http://localhost:8000
API_TIMEOUT=10000

# Development
DEV_API_URL=http://localhost:8000

# Staging
STAGING_API_URL=https://staging-api.evlifemanager.com

# Production
PROD_API_URL=https://api.evlifemanager.com

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
APP_NAME=EV Life Manager
APP_VERSION=1.0.0
APP_ENV=development

# -----------------------------------------------------------------------------
# Firebase (Push Notifications & Analytics)
# -----------------------------------------------------------------------------
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# -----------------------------------------------------------------------------
# Google Maps
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY_ANDROID=your_android_maps_api_key_here
GOOGLE_MAPS_API_KEY_IOS=your_ios_maps_api_key_here

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
ENABLE_ANALYTICS=true
MIXPANEL_TOKEN=your_mixpanel_token_here

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_AI_PREDICTION=true
ENABLE_CHARGING_OPTIMIZER=true
ENABLE_MAINTENANCE_BOOKING=true
ENABLE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# OAuth (Social Login)
# -----------------------------------------------------------------------------
GOOGLE_OAUTH_CLIENT_ID_ANDROID=your_google_oauth_client_id_android
GOOGLE_OAUTH_CLIENT_ID_IOS=your_google_oauth_client_id_ios

APPLE_OAUTH_CLIENT_ID=your_apple_oauth_client_id
APPLE_OAUTH_REDIRECT_URI=https://evlifemanager.com/auth/callback

# -----------------------------------------------------------------------------
# App Store / Play Store
# -----------------------------------------------------------------------------
IOS_APP_ID=1234567890
ANDROID_PACKAGE_NAME=com.evlifemanager.app

# -----------------------------------------------------------------------------
# Sentry (Error Tracking)
# -----------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false